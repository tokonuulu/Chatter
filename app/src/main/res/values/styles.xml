<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorSecondary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>

        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
    </style>

</resources>
